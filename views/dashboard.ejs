  <header class="masthead" style="background-image:url('/img/intro-bg.jpg');">
    <div class="intro-body">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 mx-auto">

            <button onclick="myFunction()" id="linkBtn" hidden='true'> Add a link </button>


            <div class="linkInput">
              <form action="/dashboard" method="post" id="linkForm" hidden>
                <input type="text" name="title" id="title" placeholder="Title">
                <input type="url" name="url" id="url" placeholder="Link">
                <button type="submit" value="Submit">Submit</button>
              </form>
            </div>


            <br>

            <h1 class="brand-heading">Welcome <%= user.username %>!</h1>
            <% if (user.admin == true){ %>
            <p>this is an admin account</p>
            <% } %>
            <p class="intro-text">All of your favorite content. All in one place.</p><a class="btn btn-link btn-circle" role="button" href="#about"><i class="fa fa-angle-double-down animated"></i></a>
            <!-- Display added link to profile.ejs? -->

            <!-- <form action="/dashboard" method="post" id='remove-btn'>  -->

            <!-- Here, try to see if passing user.urls object id back to the backend will allow it to be removed? -->
