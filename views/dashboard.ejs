              <!-- FIX LATER: <button frommethod = "post" formaction="/dashboard" id = "jeff">remove{icon}</button> -->
              <div class="row">
                <div class="col-md-12">
                  <br><a href="<%=user.urls[index].url%>"><%=user.urls[index].title%></a>
                </div>
              </div>
              <% } %>

            </div>
          </div>
        </div>
      </div>
    </div>
